<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="za.jfx.controllers.AuthFxController">
    <children>
        <HBox alignment="CENTER" prefHeight="1.0" prefWidth="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
            <AnchorPane style="-fx-border-color: gray;">
               <children>
                      <BorderPane minWidth="250.0" prefHeight="0.0" prefWidth="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <top>
                              <Label text="Authentication" BorderPane.alignment="CENTER">
                                  <font>
                                      <Font name="System Bold" size="14.0" />
                                  </font>
                                  <BorderPane.margin>
                                      <Insets bottom="10.0" />
                                  </BorderPane.margin>
                              </Label>
                          </top>
                          <center>
                              <GridPane minWidth="250.0" BorderPane.alignment="CENTER">
                                  <columnConstraints>
                                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
                                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="150.0" prefWidth="100.0" />
                                  </columnConstraints>
                                  <rowConstraints>
                                      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  </rowConstraints>
                                  <children>
                                      <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="username" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                      <TextField fx:id="usernameFiled" minWidth="150.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                      </TextField>
                                      <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="password" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                      <PasswordField fx:id="passwordField" minWidth="150.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                      </PasswordField>
                                  </children>
                              </GridPane>
                          </center>
                          <bottom>
                              <AnchorPane prefHeight="0.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                  <BorderPane.margin>
                                      <Insets top="10.0" />
                                  </BorderPane.margin>
                                  <children>
                                      <Button onAction="#authAction" minWidth="60.0" mnemonicParsing="false" text="Ok" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                      <Button minWidth="60.0" mnemonicParsing="false" text="Cancel" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                  </children>
                              </AnchorPane>
                          </bottom>
                      </BorderPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </AnchorPane>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="100.0" />
    </padding>
</AnchorPane>
