<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="za.jfx.controllers.WorkstationViewsFxController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <BorderPane BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                    <center>
                        <ToolBar prefHeight="0.0" prefWidth="200.0">
                            <padding>
                                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                            </padding>
                            <items>
                                <TextField fx:id="searchField"/>
                            </items>
                        </ToolBar>
                    </center>
                    <top>
                        <AnchorPane prefHeight="0.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="6.0"/>
                            </BorderPane.margin>
                            <children>
                                <Label alignment="CENTER" text="Workstations" AnchorPane.bottomAnchor="0.0"
                                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                       AnchorPane.topAnchor="0.0">
                                    <padding>
                                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                                    </padding>
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                    </top>
                </BorderPane>
            </top>
            <center>
                <TableView fx:id="tvWorkstation" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="ipAddress" prefWidth="150.0" text="ip-address"/>
                        <TableColumn fx:id="hostName" prefWidth="150.0" text="host-name"/>
                        <TableColumn fx:id="hostFullName" prefWidth="150.0" text="host-full-name"/>
                    </columns>
                    <BorderPane.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                    </BorderPane.margin>
                </TableView>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
