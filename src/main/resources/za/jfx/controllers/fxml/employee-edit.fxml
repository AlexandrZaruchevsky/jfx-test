<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minWidth="400.0" prefHeight="0.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="za.jfx.controllers.EmployeeEditFxController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane prefHeight="0.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label alignment="CENTER" text="Employee view" AnchorPane.bottomAnchor="0.0"
                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="20.0" top="10.0"/>
                    </BorderPane.margin>
                </AnchorPane>
            </top>
            <center>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                  AnchorPane.topAnchor="0.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1024" minWidth="100.0"
                                                   prefWidth="255.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                            </rowConstraints>
                            <children>
                                <Label text="Фамилия" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="10.0" right="2.0" top="2.0"/>
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="Имя" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="10.0" right="2.0" top="2.0"/>
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="Отчество" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="10.0" right="2.0" top="2.0"/>
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="middleName" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="Отдел" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="10.0" right="2.0" top="2.0"/>
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="department" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="Должность" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="10.0" right="2.0" top="2.0"/>
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="position" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="Телефон" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="10.0" right="2.0" top="2.0"/>
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="phone" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="Телефон ВТС" GridPane.columnIndex="0" GridPane.rowIndex="6">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="10.0" right="2.0" top="2.0"/>
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="phoneKspd" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="email" GridPane.columnIndex="0" GridPane.rowIndex="7">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="10.0" right="2.0" top="2.0"/>
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="7">
                                    <GridPane.margin>
                                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0"/>
                                    </GridPane.margin>
                                </TextField>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </center>
            <bottom>
                <AnchorPane prefHeight="0.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="6.0" top="10.0"/>
                    </BorderPane.margin>
                    <padding>
                        <Insets bottom="4.0" left="10.0" right="10.0" top="4.0"/>
                    </padding>
                    <children>
                        <Button onAction="#onSave" mnemonicParsing="false" text="Save" AnchorPane.bottomAnchor="0.0"
                                AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                        <Button onAction="#onCloseStage" mnemonicParsing="false" text="Cancel" AnchorPane.bottomAnchor="0.0"
                                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
